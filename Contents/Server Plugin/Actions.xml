    <Name>Smart Zone Action</Name>
    <ConfigUI>
      <Field id="zone" type="menu">
        <Label>Zones:</Label>
        <List class="self" filter="" method="myListGenerator"/>
      </Field>
    </ConfigUI>
    <CallbackMethod>smart_zone_action</CallbackMethod>
